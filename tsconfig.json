{
  "compilerOptions": {
    "target": "es6",
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "lib", "specs"]
}
